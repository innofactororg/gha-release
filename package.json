{
  "name": "gha-release",
  "version": "1.0.0",
  "description": "Release a new version in a GitHub repository",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --newLine lf",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --no-cache",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innofactororg/gha-release.git"
  },
  "keywords": [
    "github",
    "actions",
    "release"
  ],
  "author": "Innofactor Plc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/innofactororg/gha-release/issues"
  },
  "homepage": "https://github.com/innofactororg/gha-release#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "ensure-error": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.14",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "jest-circus": "^29.4.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
